---
import Layout from "@layouts/Layout.astro"
import { Image } from "astro:assets"
import { pagesSEO } from '@utils/seoData/pages'
import { mainSiteSEO } from "@utils/seoData/mainSite"

import timeLimitedIcon from "@assets/icons/timeLimited.svg"
import zombies from "@assets/icons/zombies.svg"

import type { zombieModeType } from "@utils/types"
import type { mapType } from "@utils/types"

const { id } = Astro.params

const image = pagesSEO.modes.image
const url = mainSiteSEO.url

const modes: zombieModeType[] = await fetch(`${Astro.url.origin}/data/modes/zombies.json`).then((res) => res.json())

let name = ""
let timeLimited = "" as string | boolean
let desc = ""
let maps: mapType[] = []

modes.forEach((mode) => {
    if (mode.id === id) {
        name = mode.name
        timeLimited = mode.timeLimited
        desc = mode.desc
        maps = mode.maps
    }
})

---

<Layout
    title={name}
    desc={desc}
    image={image}
    type="article"
    url={`${url}/modes/${id}`}
>

    <main>

        <div class="title">

            <h1>

                <span class="main-title">

                    {name}

                </span>

                <span class="sub-title">

                    {timeLimited &&


                        <Image
                            src={timeLimitedIcon}
                            alt="Time Limited Mode"
                            class="limited-icon"
                        />

                    }

                    <Image
                        src={zombies}
                        alt="Zombies Mode"
                        class="zombies-icon"
                    />

                </span>

            </h1>

        </div>

        <div class="image">

            <Image
            src={`/assets/images/modes/zombies/${id}.png`}
            alt={name}
            width={300}
            height={300}
        />

        </div>

        <div class="info">

            <h2>Description</h2>

            <p>{desc}</p>

        </div>

        <div class="info">

            <h2>Maps</h2>

            <ul class="maps-list">

                {maps.map((map) => (
                    <li>
                        <a href={`/maps/${map.id}`}>

                            {map.name}

                        </a>
                    </li>
                ))}

            </ul>

        </div>

    </main>

</Layout>

<style>

    main {
        position: relative;
        padding: 1rem;
    }

    .title {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 1rem;
    }

    h1 {
        display: flex;
        align-items: center;
    }

    .mode {
        margin-left: 1rem;
        width: 2rem;
        height: 2rem;
    }

    .image {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 1rem;
    }

    .info {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-bottom: 1rem;
        max-width: 800px;
        margin: 0 auto;
    }

    h2 {
        margin-bottom: 0.5rem;
    }

    p {
        text-align: center;
    }

    .maps-list {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        list-style: none;
        padding: 0;
        gap: 1rem;
    }

    .maps-list li {
        margin: 0;
    }

    .maps-list a {
        text-decoration: none;
    }

    .maps-list a:hover {
        text-decoration: underline;
    }

    .sub-title {
        display: flex;
        align-items: center;
        margin-left: 1rem;
        gap: 1rem;
    }

    .limited-icon {
        width: 4rem;
        height: 4rem;
    }

    .zombies-icon {
        width: 6rem;
        height: 6rem;
    }

</style>