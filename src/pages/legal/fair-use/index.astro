---
import Layout from "@layouts/Layout.astro"
import { mainSiteSEO } from "@utils/seoData/mainSite"

const modifiedDate = new Date('2024-03.24').toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
})

const image = mainSiteSEO.image
const url = mainSiteSEO.url

---

