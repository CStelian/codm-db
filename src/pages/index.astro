---
import Hero from "@components/Hero.astro"
import Layout from "@layouts/Layout.astro"
import { mainSiteSEO } from "@utils/seoData/mainSite"
import hero from "@assets/hero/hero.jpg"

const title = mainSiteSEO.title
const desc = mainSiteSEO.desc
const keywords = mainSiteSEO.keywords
const url = mainSiteSEO.url
const image = mainSiteSEO.image
const twitter = mainSiteSEO.twitter
const siteName = mainSiteSEO.siteName
const type = mainSiteSEO.type
const locale = mainSiteSEO.locale

console.log(import.meta.env.NODE_ENV)
---

<Layout
    title={title}
    desc={desc}
    keywords={keywords}
    url={url}
    image={image}
    twitter={twitter}
    siteName={siteName}
    type={type}
    locale={locale}
>
    <Hero
        image={hero}
        year="2024"
        season="Season 10: 5th Anniversary"
        ctaLink="https://www.callofduty.com/blog/2024/11/call-of-duty-mobile-season-10-fifth-anniversary-celebration-announcement"
        releaseDate="2024-11-07T00:00:00.000Z"
    />
</Layout>
