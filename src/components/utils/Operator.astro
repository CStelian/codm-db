---
import { Image } from 'astro:assets'
import type { OperatorType } from '../../utils/types'

import mpIcon from '@assets/icons/mp.svg'
import brIcon from '@assets/icons/br.svg'
import zombiesIcon from '@assets/icons/zombies.svg'

interface Props {
    operator: OperatorType
}

const { operator } = Astro.props
---

<a class={`${operator.mode}`} href={`/operators/${operator.id}`} data-type="operator">
    <div class="operator">
        <div class="operator-type">
            <div class="operator-type-icon">
                {operator.mode === 'mp' ? <Image src={mpIcon} alt="mp" width="24" height="24" /> : operator.mode === 'br' ? <Image src={brIcon} alt="br" width="24" height="24" /> : <Image src={zombiesIcon} alt="zombies" width="24" height="24" />}
            </div>
        </div>

        <div class="operator-name">
            <h2>{operator.name}</h2>
        </div>

        <div class="operator-image">
            <img src={`/assets/images/operators/${operator.id}.webp`} alt={operator.name} />
        </div>

    </div>

</a>

<style>
    a {
        display: block;
        text-decoration: none;
        color: inherit;
        border-radius: 1rem;
    }

    .operator {
        display: flex;
        flex-direction: column;
        height: max-content;
        align-items: center;
        gap: .5rem;
        padding: .5rem;
        border: 1px solid #fff;
        border-radius: 0.5rem;
    }

    .operator-type {
        display: flex;
        align-items: flex-end;
        gap: 0.5rem;
        margin-bottom: 0.5rem;
    }

    .operator-image {
        height: 320px;
        width: auto;
        border-radius: 1rem;
    }

    .operator-image img {
        border-radius: 1rem;
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
    }

    [alt="zombies"] {
        height: 14px;
        width: auto;
    }

</style>