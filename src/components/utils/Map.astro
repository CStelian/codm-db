---
import { Image } from 'astro:assets'

import mpIcon from '@assets/icons/mp.svg'
import brIcon from '@assets/icons/br.svg'
import zombiesIcon from '@assets/icons/zombies.svg'

import type { MapType } from '../../utils/types'
interface Props {
    map: MapType
}

const { map } = Astro.props
---

<a class={`${map.type}`} href={`/maps/${map.id}`} data-type="map">
    <div class="map">
        <div class="map-type">
            <div class="map-type-icon">
                {map.type === 'mp' ? <Image src={mpIcon} alt="mp" width="24" height="24" /> : map.type === 'br' ? <Image src={brIcon} alt="br" width="24" height="24" /> : <Image src={zombiesIcon} alt="zombies" width="24" height="24" />}
            </div>
        </div>
        <div class="map-image">
            <img src={`${Astro.url.origin}/assets/images/maps/${map.id}.webp`} alt={map.name} />
        </div>
        <div class="map-name">
            <h2>{map.name}</h2>
        </div>
    </div>
</a>

<style>

    a {
        display: block;
        text-decoration: none;
        color: inherit;
        border-radius: 1rem;
    }

    .map {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        padding: 1rem;
        border: 1px solid #fff;
        border-radius: 0.5rem;
    }

    .map-type {
        display: flex;
        align-items: flex-end;
        gap: 0.5rem;
        margin-bottom: 0.5rem;
    }

    .map-image {
        height: 320px;
        width: auto;
        border-radius: 1rem;
    }

    .map-image img {
        border-radius: 1rem;
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
    }

    [alt="zombies"] {
        height: 14px;
        width: auto;
    }
</style>