---
import type { WildcardType } from "@utils/types"

interface Props {
    wildcard: WildcardType
}

const { wildcard } = Astro.props

---

<a class="wildcard-link" href={`/wildcards/${wildcard.id}`}>

    <div class="wildcard">

        <div class="wildcard-name">
            <h2>{wildcard.name}</h2>
        </div>

        <div class="wildcard-thumbnail">
            <img class="wildcard-image" src={`/assets/images/wildcards/${wildcard.id}.jpg`} alt={wildcard.name} />
        </div>

    </div>

</a>

<style>

    .wildcard-link {
        display: block;
        text-decoration: none;
        color: inherit;
    }

    .wildcard {
        display: flex;
        flex-direction: column;
        height: max-content;
        align-items: center;
        gap: .5rem;
        padding: .5rem;
        border: 1px solid #fff;
        border-radius: 0.5rem;
    }

    .wildcard-name {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 0.5rem;
    }

    .wildcard-thumbnail {
        height: 320px;
        width: auto;
        border-radius: 1rem;
    }

    .wildcard-image {
        border-radius: 1rem;
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
    }

</style>