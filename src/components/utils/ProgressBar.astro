---

const { title, progress } = Astro.props
---

<div class="progress">
    <h3>
        <span>{title}</span>
        <span>{progress}</span>
    </h3>
    <div class="progress-bar">
        <div class="progress-bar__fill" style=`width: ${ progress }%`></div>
    </div>
</div>

<style>
    .progress {
        margin-bottom: 20px;
        padding: 20px;
    }

    .progress h3 {
        margin-bottom: 10px;
        display: flex;
        justify-content: space-between;
    }

    .progress-bar {
        width: 100%;
        height: 20px;
        background-color: #575757;
        border-radius: 10px;
        overflow: hidden;
    }

    .progress-bar__fill {
        height: 100%;
        background-color: var(--primary-color);
        border-top-right-radius: 10px;
        border-bottom-right-radius: 10px;
        box-shadow: inset 0 0 15px rgba(0, 0, 0, 0.5);
    }
</style>